<UserControl x:Class="WindowsPresentationFoundation.PlayerCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsPresentationFoundation"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100"
             MouseLeftButtonDown="UserControl_MouseLeftButtonDown">


    <StackPanel x:Name="backColor" Background="#e05942" Margin="0,2">

        <Image x:Name="image"/>
        <Label x:Name="lblNumb" Content="18" HorizontalAlignment="Center" Grid.Row="0" />
        <Label x:Name="lblName" Content="Ante REBIC" HorizontalAlignment="Center" Grid.Row="1" />



    </StackPanel>
</UserControl>
